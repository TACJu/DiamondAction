<view class='bg'>
  <image src='/images/Activity/libai.jpg'></image>
  <view class='goods-list'>
    <view class='goods-item' wx:if='{{item.activity == "libai"}}' wx:for='{{merchandise}}' data-id='{{item.id}}' bindtap='goToSubpage'>
      <image wx:if='{{item.id <= 10}}' class='goods-picture' src='{{item.photopath}}{{item.id}}.jpg'></image>
      <image wx:if='{{item.id > 10}}' class='goods-picture' src='{{item.photopath}}{{item.id - 10}}.jpg'></image>
    </view>
  </view>
</view>