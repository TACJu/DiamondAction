<!--index.wxml-->
<view class='search-content'>
    <view class="search-box">
      <view class="search">
        <icon class='searchcion' size='20' type='search'></icon>
        <input
        bindconfirm='goToSearch'
        type='text'
        placeholder="{{timeString}}好，{{userInfo.nickName}}" 
        focus='{{focus}}' 
        bindinput='getInput'/>
      </view>
    </view>
    <view
     class='fake-search-button'
     bindtap='goToSearch'>找钻</view>
</view>

<view class="page-container">
  <swiper
    class="main-swiper"
    indicator-dots="{{true}}"
    indicator-color='#999999'
    indicator-active-color='#fcfcfc'
    autoplay="{{true}}"
    interval="{{5000}}"
    duration="{{1000}}"
    circular='{{true}}'
  > 
    <block wx:for="{{swiperPics}}">
      <swiper-item>
      <image src='{{item}}' style='width:100%; height:800rpx'></image>
      </swiper-item>
    </block>
  </swiper>

  <text class='recommend-label'>为您推荐:\n</text>
  <swiper class='recommend-text'
  indicator-dots='{{false}}'
  autoplay='{{true}}'
  interval='{{3000}}'
  vertical='{{true}}'
  circular='{{true}}'
  duration='{{3000}}'
  >
    <block wx:for='{{hotMottos}}'>
      <swiper-item>
        <text class='Rtext'
        bindtap='goToMerchant'
        data-id='{{item.id}}'>{{item.name}}</text>
      </swiper-item>
    </block>
  </swiper>
</view>
