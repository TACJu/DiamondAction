/**index.wxss**/
page{
  width: 100%;
  background:linear-gradient(#cccccc);
}
.page-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}


.search-content {
  display: flex;
  flex-direction: row;
  padding-bottom: 10rpx;
}
.search-box {
  width: 80%;
}
.fake-search-button {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.search {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.search input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #000000;
  font-size: 40rpx;
}

.main-swiper {
  height: 800rpx;
}

.recommend-label {
  position: relative;
  left: 20rpx;
  color: #aaa;
}
.recommend-text {
  text-align: center;
}
.Rtext {
  font-size: 50rpx;
}