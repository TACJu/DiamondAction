<view class='bg'>
  <view class='search-content'>
    <view class="search-box">
      <view class="search">
        <icon class='searchcion' size='20' type='search'></icon>
        <input class='search-text'
        bindinput='searchValueInput'
        bindconfirm='goToSearch'
        type='text'
        value="{{searchValue}}"
        placeholder="北京大学高富帅向东伟"/>
      </view>
    </view>
    <view
     class='fake-search-button'
     bindtap='goToSearch'>找钻</view>
  </view>
  <view class='commercial-wrapper'>
    <swiper 
      class='activities'
      indicator-dots='{{true}}'
      indicator-color='#999999'
      indicator-active-color='#fcfcfc'
      autoplay='{{true}}'
      interval='{{5000}}'
      duration='{{1000}}'
      circular='{{true}}'
    >
      <block wx:for='{{activity_bg}}'>
      <swiper-item class='test' data-name='{{item.name}}' bindtap='goToActivity'>
        <image class='activity_photo' src='{{item.photopath}}{{item.name}}.jpg'></image>
      </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='catagory'>
      <text class='new' bindtap='goToNew'>时事</text>
      <text class='heart' bindtap='goToHeart'>心意</text>
      <text class='poem' bindtap='goToPoem'>诗句</text>
      <text class='humor' bindtap='goToHumor'>幽默</text>
  </view>

  <view class='goods-list'>
    <view class='goods-item' wx:for='{{merchandise}}' data-id='{{item.id}}' bindtap='goToSubpage'>
      <image class='goods-picture' src='{{item.photopath}}{{item.id}}.jpg'></image>
    </view>
  </view>
</view>