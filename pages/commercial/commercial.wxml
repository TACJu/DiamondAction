<view class='bg'>
  <view class='search-content'>
    <view class="search-box">
      <view class="search">
        <icon class='searchcion' size='20' type='search'></icon>
        <input class='search-text'
        bindinput='searchValueInput'
        bindconfirm='goToSearch'
        type='text'
        value="{{searchValue}}"
        placeholder="北京大学高富帅向东伟"/>
      </view>
    </view>
    <view
     class='fake-search-button'
     bindtap='goToSearch'>找钻</view>
  </view>
  <view class='commercial-wrapper'>
    <swiper 
      class='activities'
      indicator-dots='{{true}}'
      indicator-color='#999999'
      indicator-active-color='#fcfcfc'
      autoplay='{{true}}'
      interval='{{5000}}'
      duration='{{1000}}'
      circular='{{true}}'
    >
      <block wx:for='{{activity_bg}}'>
      <swiper-item class='test' data-name='{{item.name}}' bindtap='goToActivity'>
        <image class='activity_photo' src='{{item.photopath}}'></image>
      </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='catagory'>
    <!-- <image src='https://6d61-master-27262a-1259058618.tcb.qcloud.la/images/Icon/%E6%97%B6%E4%BA%8B.png?sign=7a95020f9e6072b6d92f7b728e2379ba&t=1557968750' class='new' bindtap='goToNew'></image>
    <image src='https://6d61-master-27262a-1259058618.tcb.qcloud.la/images/Icon/%E5%BF%83%E6%84%8F.png?sign=808fbf85ce7dafbe4abc3b9ec333b395&t=1557968186' class='heart' bindtap='goToHeart'></image>
    <image src='https://6d61-master-27262a-1259058618.tcb.qcloud.la/images/Icon/%E8%AF%97%E5%8F%A5.png?sign=62f4bfe8c63aac6b1b02ad7eaf4a440d&t=1557968200' class='poem' bindtap='goToPoem'></image>
    <image src='https://6d61-master-27262a-1259058618.tcb.qcloud.la/images/Icon/%E5%B9%BD%E9%BB%98.png?sign=bec42e397de3a8dc94ccb04e3d09bf27&t=1557968213' class='humor' bindtap='goToHumor'></image> -->
    <button class='new' bindtap='goToNew'>时事</button>
    <button class='heart' bindtap='goToHeart'>心意</button>
    <button class='poem' bindtap='goToPoem'>诗句</button>
    <button class='humor' bindtap='goToHumor'>幽默</button>
      <!-- <text class='new' bindtap='goToNew'>时事</text>
      <text class='heart' bindtap='goToHeart'>心意</text>
      <text class='poem' bindtap='goToPoem'>诗句</text>
      <text class='humor' bindtap='goToHumor'>幽默</text> -->
  </view>

  <view class='goods-list'>
    <view class='goods-item' wx:for='{{merchandise}}' data-id='{{item.cid}}' bindtap='goToSubpage'>
      <image class='goods-picture' src='{{item.photoPath}}.jpg'></image>
    </view>
  </view>
</view>